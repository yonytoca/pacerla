consultas anidadas
SELECT IF(right(f.comprobante,8)<c.secuencia_final,right(f.comprobante,8)+2, 'false') as var1, c.secuencia
FROM factura as f, ncf as c where  f.id = 1 group by f.id




SELECT f.id, n.serie, n.division_n, n.punto_em, n.area_imp, n.tipo_compro, lpad(IF(right(f.comprobante,8),right(f.comprobante,8)+1, c.numero_inicial),8,'0') as var1, c.numero_inicial, c.numero_final
FROM factura as f, ncfmantenimiento as c, ncf as n 
where right(f.comprobante,8) between c.numero_inicial and c.numero_final 
group by f.id desc, c.id DESC
LIMIT 1


// selecionar el comprobante cuando no hay registro 

		$sql="SELECT f.id, n.serie, n.division_n, n.punto_em, n.area_imp, n.tipo_compro, lpad(right(f.comprobante,8)+1, 8,'0') as var1
	FROM factura as f, ncfmantenimiento as c, ncf as n where f.id_comprobante = c.id_comprobante and n.id=1 group by f.id desc, c.id DESC
	LIMIT 1";
	
				$resul=mysqli_query($conexion,$sql);					
